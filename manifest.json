{
    "manifest_version": 2,
    "name": "Live Server Web Extension",
    "version": "0.0.1",
    "description": "Live Server Web Extension",
    "icons": {},
    "content_scripts": [
        {
            "matches": [
                "http://localhost:*/*",
                "https://127.0.0.1:*/*"
            ],
            "js": [
                "reload.js"
            ]
        }
    ],
    "background": {
        "page" : "./options/options.html"
    },

    "browser_action": {
        "default_popup":"./options/options.html"
    },

    "options_ui": {
        "page": "./options/options.html",
        "chrome_style": true
    },

    "permissions": [
        "tabs",
        "http://localhost:*/*",
        "https://127.0.0.1:*/*"
    ]
}