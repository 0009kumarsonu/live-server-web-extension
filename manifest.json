{
    "manifest_version": 2,
    "name": "Live Server Web Extension",
    "version": "0.0.1",
    "description": "Live Server Web Extension",
    "icons": {
        "96": "./img/icon.png"
    },
    "author": "Ritwick Dey",
    "short_name": "Live Server",
    "homepage_url": "https://github.com/ritwickdey/live-server-web-extension",
    "content_scripts": [
        {
            "matches": [
                "http://localhost:*/*",
                "https://127.0.0.1:*/*"
            ],
            "js": [
                "reload.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_popup": "./popup/popup.html"
    },
    "options_ui": {
        "page": "./popup/popup.html",
        "chrome_style": true
    },
    "permissions": [
        "tabs",
        "http://localhost:*/*",
        "https://127.0.0.1:*/*"
    ]
}